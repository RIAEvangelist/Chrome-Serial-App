{
    "manifest_version": 2,
    "name": "Diginow Serial Terminal",
    "short_name" : "Serial Terminal",
    "description":"An easy to use and easy on the eyes serial terminal compatible with arduino and any other serial device.",
    "minimum_chrome_version": "33",
    "version": "1.0.0.2",
    "offline_enabled": true,
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "64": "icon-64.png",
        "128": "icon-128.png",
        "256": "icon-256.png"
    },
    "app": {
        "background": {
            "scripts": [
                "main.js"
            ]
        }
    },
    "permissions": [
        "serial"
    ]
}